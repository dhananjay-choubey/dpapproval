<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<List width="100%" growing="false" growingThreshold="20" growingScrollToLoad="false" backgroundDesign="Solid"
		items="{path:'GrowthApproverComments', templateShareable:true}">
		<items>
			<FeedListItem icon="" sender="{ApproverName}" text="{Comment}" info="{User}"
				timestamp="{path: 'Date', type: 'sap.ui.model.type.Date', formatOptions: { UTC: true, style: 'medium' }}"/>
		</items>
	</List>
</core:FragmentDefinition>