<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" controllerName="com.rmz.dpapproval.controller.Master">
	<Page id="page" title="{masterView>/title}" navButtonPress="onNavBack" showNavButton="true">
		<subHeader>
			<Bar id="headerBar">
				<contentMiddle>
					<SearchField id="searchField" showRefreshButton="{= !${device>/support/touch} }" tooltip="{i18n>masterSearchTooltip}" width="100%"
						search="onSearch"></SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<PullToRefresh id="pullToRefresh" visible="{device>/support/touch}" refresh="onRefresh"/>
			<!--  For client side filtering add this to the items attribute:  parameters: {operationMode: 'Client'}}"  -->
			<List id="list" items="{path:'/DPHeaderDataSet', templateShareable:true}" busyIndicatorDelay="{masterView>/delay}"
				noDataText="{masterView>/noDataText}" mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}" growing="true"
				growingThreshold="10" growingScrollToLoad="true" updateFinished="onUpdateFinished" selectionChange="onSelectionChange">
				<infoToolbar>
					<Toolbar active="true" id="filterBar" visible="{masterView>/isFilterBarVisible}" press="onOpenViewSettings">
						<Title id="filterBarLabel" text="{masterView>/filterBarLabel}"/>
					</Toolbar>
				</infoToolbar>
				<items>
					<ObjectListItem intro="" title="{DPNumber}" number="{Total}" numberUnit="INR CR" numberState="None" type="Active" selected="true"
						showMarkers="false" press="onObjectListItemPress">
						<attributes>
							<ObjectAttribute title="Version" text="{Version}" active="false" visible="true"/>
							<ObjectAttribute title="Creator" text="{CreatedByID}" active="false" visible="true"/>
						</attributes>
						<firstStatus>
							<ObjectStatus title="Created" text="{path: 'CreationDate', type: 'sap.ui.model.type.Date', formatOptions: { UTC: true, style: 'short' }}"
								state="Success" visible="true"/>
						</firstStatus>
						<secondStatus/>
					</ObjectListItem>
				</items>
			</List>
		</content>
		<footer>
			<OverflowToolbar id="footerbar">
				<ToolbarSpacer/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>