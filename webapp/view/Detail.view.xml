<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:footerbar="sap.ushell.ui.footerbar" xmlns:core="sap.ui.core"
	controllerName="com.rmz.dpapproval.controller.Detail" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form">
	<Page id="page" navButtonPress="onNavBack" showNavButton="{device>/system/phone}" title="{i18n>detailTitle}" busy="{detailView>/busy}"
		busyIndicatorDelay="{detailView>/delay}">
		<content>
			<layout:VerticalLayout width="100%" visible="true">
				<layout:content>
					<ObjectHeader intro="" title="{DPNumber}" icon=""
						number="{path: 'Total', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}" numberUnit="INR CR" numberState="None"
						titleActive="false" backgroundDesign="Solid" condensed="false" visible="true" titlePress="_onObjectHeaderTitlePress">
						<attributes>
							<ObjectAttribute title="Creator" text="{CreatedByName}" active="false" visible="true" press="_onObjectAttributePress"/>
							<ObjectAttribute title="Last Approver" text="{PreviousApproverName}" active="false" visible="true"/>
						</attributes>
						<statuses>
							<ObjectStatus title="Created On" text="{path: 'CreationDate', type: 'sap.ui.model.type.Date', formatOptions: { UTC: true, style: 'short' }}"
								state="None" visible="true"/>
							<ObjectStatus title="Version" text="{Version}" state="None" visible="true"/>
						</statuses>
					</ObjectHeader>
				</layout:content>
			</layout:VerticalLayout>
			<IconTabBar expandable="true" expanded="true" applyContentPadding="false" backgroundDesign="Solid" upperCase="false" visible="true"
				selectedKey="Ok">
				<items>
					<IconTabFilter icon="sap-icon://drill-up" iconColor="Default" text="Growth" count="" design="Vertical" enabled="true" showAll="false"
						textDirection="Inherit" visible="true">
						<content>
							<core:Fragment fragmentName="com.rmz.dpapproval.fragments.GrowthMobile" type="XML"/>
						</content>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://action-settings" iconColor="Positive" text="Development" count="" design="Vertical" showAll="false"
						textDirection="Inherit" enabled="true" visible="true" iconDensityAware="false">
						<content>
							<core:Fragment fragmentName="com.rmz.dpapproval.fragments.DevelopmentForm" type="XML"/>
							<core:Fragment fragmentName="com.rmz.dpapproval.fragments.DevelopmentMobile" type="XML"/>
							<core:Fragment fragmentName="com.rmz.dpapproval.fragments.DevelopmentDesktop" type="XML"/>
						</content>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://capital-projects" iconColor="Critical" text="Capital" count="" design="Vertical" showAll="false"
						textDirection="Inherit" enabled="true" visible="true" iconDensityAware="false">
						<content>
							<core:Fragment fragmentName="com.rmz.dpapproval.fragments.CapitalMobile" type="XML"/>
							<core:Fragment fragmentName="com.rmz.dpapproval.fragments.CapitalDesktop" type="XML"/>
						</content>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://money-bills" iconColor="Negative" text="Revenue" count="" design="Vertical" showAll="false"
						textDirection="Inherit" enabled="true" visible="true" iconDensityAware="false">
						<content>
							<core:Fragment fragmentName="com.rmz.dpapproval.fragments.RevenueMobile" type="XML"/>
							<core:Fragment fragmentName="com.rmz.dpapproval.fragments.RevenueDesktop" type="XML"/>
						</content>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://comment" iconColor="Default" text="Comments"
						count="{path: 'NbNotes', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}" design="Vertical" showAll="false"
						textDirection="Inherit" enabled="true" visible="true" iconDensityAware="false">
						<content>
							<core:Fragment fragmentName="com.rmz.dpapproval.fragments.Comments" type="XML"/>
						</content>
					</IconTabFilter>
				</items>
				<content/>
			</IconTabBar>
		</content>
		<footer>
			<OverflowToolbar width="100%" height="auto" design="Auto" enabled="true" visible="true">
				<content>
					<ToolbarSpacer width=""/>
					<Button text="Approve" type="Accept" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
						press="_onApproveButtonPress"/>
					<Button text="Reject" type="Reject" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
						press="_onRejectButtonPress1"/>
				</content>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>